$red = #ee3a49
$black = #1c1c1c
@import "./fonts.styl";
@import 's-grid-settings'
gutter = 24px
@import 's-grid-functions'
.black

.wraper
  box-sizing: border-box
  background: $red
  height: 100%
  width: 100%
  position:absolute
  padding: 40px 0
  font-family: 'CalibreRegular'
  font-weight: normal
  transition: all .3s
  cursor: url(../images/dot_white.png), default
  &.white
    background: white;
    color: $black
    cursor: url(../images/dot_red.png), default
    .logo
      background: url("../images/logo_red.svg") no-repeat
      background-size: 100% auto
  &.black
    background: $black;
    color: white
    cursor: url(../images/dot_red.png), default
.reactor
  grid()
  max-width: 1340px
  height: 100%
  margin: 0 auto
.content
  position:relative
  height: 100%
  width: 100%
  .logo
    cell(1,1)
    height: 300px
    background: url("../images/logo_white.svg") no-repeat
    background-size: 100% auto
    @media screen and (max-width: 700px)
      height: 100px
      background-size: contain!important
  .line
    float:left
    width: 100%
    height: 1px
  .text
    position:absolute
    left 50%
    bottom: 0
    max-width: 500px
    @media screen and (max-width: 1000px)
      max-width: 300px
    @media screen and (max-width: 700px)
      float:left
      max-width: 100%
      left:0
      position:relative
      padding: 12px
  h2
    font-size: 24px
    line-height: 34px
    font-family: 'CalibreRegular'
    font-weight: normal
    @media screen and (max-width: 700px) {
      float:left
      width: 100%
      margin-top: 10px
    }
  .copyright
    position:absolute
    bottom: 0
    left:24px
    font-size: 12px
    @media screen and (max-width: 700px)
      position:relative
      float: left
      padding: 0
      left: 12px
  .contact
    width: 500px
    float:right
    font-size: 20px
    line-height: 22px
    margin-top: 35px
    @media screen and (max-width: 1000px)
      max-width: 300px
    @media screen and (max-width: 700px) {
      float:left
      width: 100%
    }
